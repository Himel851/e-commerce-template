{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "next.config.mjs",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
